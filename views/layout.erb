			dateFormat:"%Y-%m-%d"

    });
		new JsDatePick({
			useMode:2,
			target:"dateField3",
			dateFormat:"%Y-%m-%d"

    });
		new JsDatePick({
			useMode:2,
			target:"dateField4",
			dateFormat:"%Y-%m-%d"

      });*/
   }
	};
</script>
